
    <% layout('layouts/boilerplate') %>
    
    <div class="row">
        <h1 class="text-center">Edit the BrookLaw</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/lawfirms/<%=lawfirm._id%>?_method=PUT" method = "POST" novalidate class="validate-form" enctype="multipart/form-data">

                <div class="row ">
                     <div class="mb-3 col-sm-6">
                         <label class="form-label" for="Name">Name</label>
                         <input type="text" class="form-control" id="Name" placeholder="Name" name="lawfirm[name]" value="<%= lawfirm.name %>" required>
                         <div class="valid-feedback">Looks good!</div>
                  </div>

                     <div class="mb-3 col-sm-6">
                         <label class="form-label" for="title">Title</label>
                         <input type="text" class="form-control" id="title" placeholder="Title" name="lawfirm[title]" value="<%= lawfirm.title %>" required>
                         <div class="valid-feedback"> Looks good!</div>                 
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input type="text" class="form-control" id="location" placeholder="Location" name="lawfirm[location]" value="<%= lawfirm.location %>" required>
                <div class="valid-feedback">
                   Looks good!
               </div>
            </div>

                 <div class="mb-3 ">
                     <label class="form-label" for="description">Description</label>
                     <textarea type="text" class="form-control" id="description" placeholder="Description" name="lawfirm[description]" required><%= lawfirm.description %></textarea>
                     <div class="valid-feedback">
                        Looks good!
                    </div>
                 </div>

                 <div class="mt-3 mb-5 custom-file">
                    <label for="image" class="form-label">Add more Images</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                    <label for="image" class="custom-file-label text-muted"></label>
                  </div>

                  <div class="mb-3">
                    
                    <% lawfirm.images.forEach(function (img,i) { %>
                        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" name="deleteImages[]" value="<%= img.filename %>" id="image-<%=i%>">
                        </div>
                        <label for="image-<%=i%>">Delete?</label>
                        <% }) %>
                   
                  </div>

                 <div class="mb-3">
                     <button type="submit" class="btn btn-info">Update BrookLaw</button>
                 </div>

             </form>
             <a href="/lawfirms/<%= lawfirm._id %>">Back to BrookLaw</a>
        </div>
    </div>
