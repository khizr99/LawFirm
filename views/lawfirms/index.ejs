<% layout('layouts/boilerplate') %>
<div id="cluster-map"></div>
<div class="container">
    <h1>All BrookLaw peers</h1>
    
        <% for(let firm of lawfirms){ %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                          <% if (firm.images.length) { %> 
                        <img class="img-fluid" src="<%= firm.images[0].url %>" alt="">
                        <% }else{ %>
                            <img class="img-fluid" src="" alt="">
                            <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= firm.title %></h5>
                            <h6 class="card-subtitle mb-2"><%= firm.name %> from <%= firm.location %></h6>
                            <p class="card-text"><%= firm.description %></p>
                            <a class="btn btn-primary" href="/lawfirms/<%=firm._id %>">View <%= firm.name %></a>
                        </div>
                    </div>
                </div>
            </div>
       <% }%> 
     
        </div>

        <script>
            const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
            const lawfirms = {features:<%-JSON.stringify(lawfirms)%>}
          </script>
   
<script src="/javascripts/clusterMap.js"></script>